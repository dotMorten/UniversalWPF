<UserControl
    x:Class="TestApp.Samples.ToggleSwitch.Sample1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid Background="Gray">

        <StackPanel>
            <ToggleSwitch IsOn="True" Header="Switch 1" />
            <ToggleSwitch OnContent="Enabled" OffContent="Disabled" x:Name="Switch2" Header="Switch 2" />
            <CheckBox IsChecked="{Binding IsOn, ElementName=Switch2, Mode=TwoWay}" />
        </StackPanel>

	</Grid>
</UserControl>
